<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".KatakanaquizActivity">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/designkana" />

    <ProgressBar
        android:id="@+id/progressBarkata"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="55dp" />

    <TextView
        android:id="@+id/questionkata_txt"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="125dp"
        android:baselineAligned="true"
        android:fontFamily="@font/noto_sans"
        android:gravity="center"
        android:text="バ"
        android:textAlignment="center"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/answerkata"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_below="@+id/questionkata_txt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="140dp"
        android:background="@drawable/boxanswer" />

    <Button
        android:id="@+id/cofirmkata_text"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/answerkata"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"
        android:text="Enter"
        android:textAlignment="center"
        android:textColor="#465835"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

</RelativeLayout>